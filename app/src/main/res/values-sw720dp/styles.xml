<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_text_label_style">
        <item name="android:layout_marginTop">@dimen/_10ssp</item>
        <item name="android:layout_marginEnd">@dimen/_30ssp</item>
        <item name="android:fontFamily">@font/grotesk_pro_light</item>
        <item name="android:textColor">#544D4030</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="login_edit_text_style">
        <item name="android:backgroundTint">#4D827564</item>
        <item name="android:fontFamily">@font/grotesk_pro_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="button_style">
        <item name="android:layout_marginStart">@dimen/_50ssp</item>
        <item name="android:layout_marginEnd">@dimen/_50ssp</item>
        <item name="android:fontFamily">@font/grotesk_pro_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/_5ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginStart">@dimen/_40sdp</item>
        <item name="android:layout_marginEnd">@dimen/_40sdp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="button_style_consulting">
        <item name="android:fontFamily">@font/grotesk_pro_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/_5ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="button_style_full">
        <item name="android:fontFamily">@font/grotesk_pro_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/_5ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="style_error_tv">
        <item name="android:fontFamily">@font/grotesk_pro_light</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_6ssp</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:textColor">@color/red_color</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="TextAppearance.MaterialCalendarWidget.Header" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Date" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>

    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
    </style>

</resources>