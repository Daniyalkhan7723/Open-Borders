<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/consultant1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/consultation_bg_new"
        android:layout_marginBottom="@dimen/_10sdp"
        android:weightSum="1"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:fontFamily="@font/grotesk_pro_normal"
            android:gravity="center_vertical"
            android:text="Phone Call Or Video Call"
            android:layout_weight="1"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/brown_new"
            android:textSize="@dimen/_10ssp" />

        <ImageView
            android:id="@+id/selectImage1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_tick"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>