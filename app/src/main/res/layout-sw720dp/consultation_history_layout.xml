<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginHorizontal="@dimen/_40sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:backgroundTint="@color/app_bg_color"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:ellipsize="end"
                android:fontFamily="@font/grotesk_pro_normal"
                android:maxLines="2"
                android:text="@string/fiancee_visa"
                android:textColor="@color/brown_new"
                android:textSize="@dimen/_7ssp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/grotesk_pro_normal"
                android:lines="2"
                android:text="@string/_1_000_00_every_month_for_2_months"
                android:textColor="@color/brown_new"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>